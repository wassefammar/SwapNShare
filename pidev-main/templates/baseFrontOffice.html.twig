								<div class="container">
									<div class="row">
										{% for category in categories.findAll() %}
											{% if category.type == 'product' %}
												<div class="col-md-3">
													<ul class="list-unstyled">
														<li><a class="dropdown-item subcategory-link" href="/services">{{ category.getNomCategorie() }}</a></li>
													</ul>
												</div>	
											{% endif %}
										{% endfor %}
										{% for category in categories.findAll() %}
											{% if category.type == 'service' %}
												<div class="col-md-3">
													<ul class="list-unstyled">
														<li><a class="dropdown-item subcategory-link" href="/services">{{ category.getNomCategorie() }}</a></li>
													</ul>
												</div>	
											{% endif %}
										{% endfor %}
									</div>
								</div>
							</div>
						</li>
					</ul>
					<script>
						// Activate dropdown on hover
						$('#mega-cat-menu-dropdown').hover(function() {
							$(this).find('#dropdown-cat-menu').stop(true, true).delay(200).fadeIn(500);
						}, function() {
							$(this).find('#dropdown-cat-menu').stop(true, true).delay(200).fadeOut(500);
						});
					</script>
					<!-- search bar -->
					<form class="d-flex">
