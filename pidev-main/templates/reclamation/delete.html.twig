{% extends 'baseFrontOffice.html.twig'%}
{% block body %}
<h1>Delete Confirmation</h1>
<p>Are you sure you want to delete this item?</p>
<form method="post" action="{{ path('delete', {'id': object.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ object.id) }}">
    <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');">Yes, Delete</button>
    <a href="{{ path('app1_affiche_reclamation') }}">Cancel</a>
</form>
{% endblock %}
