
{% extends 'inscription.html.twig' %}

{% block title%} Inscripiton {% endblock %}

{% block body %}

        <div class="row justify-content-center">

    

  <div class="card border-success mb-3" style="width: 700px;   height: 780px;    margin-top: 20px;">

   <div class="card-header bg-transparent border-success  text-center " style="font-weight: bold;  color: black;    font-size: 20px;    ">Registration form</div>
 
 {{form_start(form, {'attr': {'novalidate': 'novalidate'}} )}}


 <div class="row">
    <div class="col-sm-5">
      
    
        {{ form_label(form.nom, 'Last Name') }}
        {{ form_widget(form.nom) }}
        {{ form_errors(form.nom) }}
    </div>
    <div class="col-sm-5">
        {{ form_label(form.prenom, 'First Name') }}
        {{ form_widget(form.prenom) }}
        {{ form_errors(form.prenom) }}
    </div>
</div>
 

  


 <div class="row">
    <div class="col-sm-5">
        {{ form_label(form.adresse, 'Address') }}
        {{ form_widget(form.adresse) }}
         {{ form_errors(form.adresse) }}
    </div>
    <div class="col-sm-6">
        {{ form_label(form.telephone, 'Phone_Number') }}
        {{ form_widget(form.telephone) }}
         {{ form_errors(form.telephone) }}
    </div>
</div>



       <div class="row ">
    <div class="col-sm-11">

     {{ form_label(form.email,'Email') }}
  

     
     {{ form_widget(form.email) }}
                                
       
      {{ form_errors(form.email) }}
    
</div>   


 <div class="row mt-4">
    <div class="col-sm-">
        
     
            {{ form_widget(form.mot_de_passe) }}
            {{ form_errors(form.mot_de_passe) }}

    </div>
</div>

 <div class="row mt-4">
    <div class="col-sm-6">
        
          
            {{ form_widget(form.gender) }}
            {{ form_errors(form.gender) }}
     
    </div>
</div>





{{form_end(form)}}


 </div>

 <style>  
 
 .card {
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2), 5px 5px 10px rgba(0, 0, 0, 0.5);
}





</style>








{% endblock %}

